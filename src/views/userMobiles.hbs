<body>
<h1>User Mobiles</h1>

<h2>Find User</h2>
<form method="POST">
    <label for="username">Username:</label>
    <input
        type="text"
        id="username"
        name="username"
        required
        value="{{submittedUsername}}"
    >
    <label for="daysCount">Days count:</label>
    <input 
    type="number"
    id="daysCount"
    name="daysCount"
    required
    value="{{submittedDaysCount}}"
    min="1"
    >
    <button type="submit">Check</button>
</form>

{{#if error}}
    <p class="error">{{error}}</p>
{{/if}}

{{#if searchedUser}}
    <h2>Mobiles for {{searchedUser.username}}</h2>
    <h2>Total mobiles in last {{submittedDaysCount}} days: <strong>{{mobileCount}}</strong></h2>

    
